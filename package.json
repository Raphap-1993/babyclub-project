{
  "name": "babyclub-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:landing": "pnpm --filter landing dev",
    "dev:backoffice": "pnpm --filter backoffice dev",
    "dev:apps": "turbo run dev --filter=landing --filter=backoffice",
    "lint": "turbo run lint",
    "test": "vitest run",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "typecheck:landing": "pnpm exec tsc --noEmit -p apps/landing/tsconfig.json",
    "typecheck:backoffice": "pnpm exec tsc --noEmit -p apps/backoffice/tsconfig.json",
    "db:check:landing": "node scripts/check-db-schema.js --env apps/landing/.env.local",
    "db:check:backoffice": "node scripts/check-db-schema.js --env apps/backoffice/.env.local",
    "smoke:local": "bash scripts/smoke-public-api.sh \"http://localhost:3000\" \"${CODE:-}\""
  },
  "devDependencies": {
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.15.3",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.22",
    "next": "16.0.7",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "3.4",
    "turbo": "^2.6.1",
    "typescript": "5.9.2",
    "vitest": "^2.1.4"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.86.0",
    "@zxing/browser": "^0.1.4",
    "luxon": "^3.7.2",
    "resend": "^6.6.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
